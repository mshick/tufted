{
  "name": "@mshick/tufted",
  "version": "1.0.7",
  "keywords": [
    "react",
    "nodejs",
    "nextjs",
    "markdown",
    "mdx",
    "tufte",
    "rehype",
    "remark",
    "sidenote",
    "epigraph"
  ],
  "type": "module",
  "exports": {
    "./remark": "./dist/remark/index.js",
    "./rehype": "./dist/rehype/index.js",
    "./tailwind": "./dist/tailwind/index.cjs"
  },
  "types": "./dist",
  "typesVersions": {
    "*": {
      "remark": [
        "dist/remark/index.d.ts"
      ],
      "rehype": [
        "dist/rehype/index.d.ts"
      ],
      "tailwind": [
        "dist/tailwind/index.d.cts"
      ]
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "clean": "del-cli dist",
    "format": "eslint src --fix",
    "prepare": "npm run build",
    "release": "np",
    "test": "npm run format && vitest run",
    "watch": "vitest"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 12
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-console": "error",
      "no-unreachable": "error"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.cjs"
        ],
        "parserOptions": {
          "ecmaVersion": "latest"
        }
      },
      {
        "files": [
          "**/*.ts"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": "latest",
          "sourceType": "module"
        },
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
          "@typescript-eslint/consistent-type-definitions": "off"
        }
      },
      {
        "files": [
          "*.json"
        ],
        "plugins": [
          "json-format"
        ]
      },
      {
        "files": [
          "*.mdx",
          "*.md"
        ],
        "settings": {
          "mdx/code-blocks": false,
          "mdx/language-mapper": {}
        },
        "extends": "plugin:mdx/recommended",
        "rules": {
          "indent": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "tsconfig.json",
    "vitest.config.ts",
    "dist",
    "__snapshots__"
  ],
  "dependencies": {
    "@tailwindcss/typography": "^0.5.7",
    "image-size": "^1.0.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.1.0",
    "rehype-prism-plus": "^1.5.0",
    "rehype-slug": "^5.0.1",
    "remark-directive": "^2.0.1",
    "remark-directive-rehype": "^0.4.2",
    "remark-footnotes": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx-images": "^2.0.0",
    "remark-squeeze-paragraphs": "^5.0.1",
    "remark-unwrap-images": "^3.0.1",
    "tailwindcss": "^3.1.8",
    "unified": "^10.1.2",
    "unist-builder": "^3.0.0",
    "unist-util-find-after": "^4.0.0",
    "unist-util-remove": "^3.1.0",
    "unist-util-select": "^4.0.1",
    "unist-util-visit": "^4.1.1",
    "unist-util-visit-parents": "^5.1.1"
  },
  "devDependencies": {
    "@types/hast": "^2.3.4",
    "@types/js-beautify": "^1.13.3",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "hastscript": "^7.1.0",
    "js-beautify": "^1.14.6",
    "mdast-util-directive": "^2.2.1",
    "mdast-util-mdxjs-esm": "^1.3.0",
    "np": "^7.6.2",
    "prettier": "^2.7.1",
    "rehype-stringify": "^9.0.3",
    "remark-html": "^15.0.1",
    "remark-mdx": "^2.1.5",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "to-vfile": "^7.2.3",
    "type-fest": "^3.1.0",
    "typescript": "^4.8.4",
    "vfile": "^5.3.5",
    "vitest": "^0.24.3"
  },
  "engines": {
    "node": "^12.19.0 || ^14.15.0 || ^16.13.0 || ^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
