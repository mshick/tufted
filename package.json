{
  "name": "@mshick/tufted",
  "version": "1.0.0",
  "keywords": [
    "react",
    "nodejs",
    "nextjs",
    "markdown",
    "mdx",
    "tufte",
    "rehype",
    "remark",
    "sidenote",
    "epigraph"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist",
  "typesVersions": {
    "*": {
      "react": [
        "dist/react/index.d.ts"
      ]
    }
  },
  "files": [
    "dist/index.d.ts",
    "dist/index.js"
  ],
  "scripts": {
    "build": "del-cli dist && tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "release": "np",
    "test": "eslint src && ava"
  },
  "prettier": {
    "bracketSpacing": false
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 12
    },
    "plugins": [
      "json-format"
    ],
    "extends": [
      "xo-space"
    ],
    "rules": {
      "no-console": "error",
      "no-unreachable": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.{ts,tsx}"
        ],
        "extends": [
          "xo-typescript/space"
        ]
      },
      {
        "files": [
          "**/*.{md,mdx}"
        ],
        "settings": {
          "mdx/code-blocks": false,
          "mdx/language-mapper": {}
        },
        "extends": [
          "plugin:mdx/recommended"
        ]
      }
    ]
  },
  "eslintIgnore": [
    "tsconfig.json",
    "dist"
  ],
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "src/**/*.test.ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^18.8.3",
    "@types/react": "^18.0.21",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "ava": "^4.3.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.25.0",
    "eslint-config-xo-space": "^0.33.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-mdx": "^2.0.5",
    "next": "^12.3.1",
    "next-auth": "^4.13.0",
    "np": "^7.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1",
    "type-fest": "^3.1.0",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "next-auth": "^4.13.0",
    "react": "^17.0.2 || ^18",
    "react-dom": "^17.0.2 || ^18"
  },
  "engines": {
    "node": "^12.19.0 || ^14.15.0 || ^16.13.0"
  }
}
