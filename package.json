{
  "name": "@mshick/tufted",
  "version": "1.0.0",
  "keywords": [
    "react",
    "nodejs",
    "nextjs",
    "markdown",
    "mdx",
    "tufte",
    "rehype",
    "remark",
    "sidenote",
    "epigraph"
  ],
  "type": "module",
  "exports": {
    "./remark": "./dist/remark/index.js",
    "./rehype": "./dist/rehype/index.js"
  },
  "types": "./dist",
  "typesVersions": {
    "*": {
      "remark": [
        "dist/remark/index.d.ts"
      ],
      "rehype": [
        "dist/rehype/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "del-cli dist && tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "release": "np",
    "test": "eslint src && ava"
  },
  "prettier": {
    "bracketSpacing": false
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 12
    },
    "plugins": [
      "json-format"
    ],
    "extends": [
      "xo-space"
    ],
    "rules": {
      "no-console": "error",
      "no-unreachable": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.{ts,tsx}"
        ],
        "extends": [
          "xo-typescript/space"
        ],
        "rules": {
          "capitalized-comments": "off",
          "@typescript-eslint/consistent-type-definitions": "off"
        }
      },
      {
        "files": [
          "**/*.{md,mdx}"
        ],
        "settings": {
          "mdx/code-blocks": false,
          "mdx/language-mapper": {}
        },
        "extends": [
          "plugin:mdx/recommended"
        ]
      }
    ]
  },
  "eslintIgnore": [
    "tsconfig.json",
    "dist",
    "__snapshots__"
  ],
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "src/**/*.test.ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "dependencies": {
    "image-size": "^1.0.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.1.0",
    "rehype-prism-plus": "^1.5.0",
    "rehype-slug": "^5.0.1",
    "remark-directive": "^2.0.1",
    "remark-directive-rehype": "^0.4.2",
    "remark-mdx-images": "^2.0.0",
    "remark-squeeze-paragraphs": "^5.0.1",
    "remark-unwrap-images": "^3.0.1",
    "unified": "^10.1.2",
    "unist-builder": "^3.0.0",
    "unist-util-find-after": "^4.0.0",
    "unist-util-remove": "^3.1.0",
    "unist-util-select": "^4.0.1",
    "unist-util-visit": "^4.1.1",
    "unist-util-visit-parents": "^5.1.1"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/hast": "^2.3.4",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "ava": "^4.3.3",
    "del-cli": "^5.0.0",
    "eslint": "^8.25.0",
    "eslint-config-xo-space": "^0.33.0",
    "eslint-config-xo-typescript": "^0.53.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-mdx": "^2.0.5",
    "hastscript": "^7.1.0",
    "mdast": "^3.0.0",
    "mdast-util-directive": "^2.2.1",
    "np": "^7.6.2",
    "rehype-stringify": "^9.0.3",
    "remark-mdx": "^2.1.5",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "to-vfile": "^7.2.3",
    "ts-node": "^10.9.1",
    "type-fest": "^3.1.0",
    "typescript": "^4.8.4",
    "vfile": "^5.3.5"
  },
  "engines": {
    "node": "^12.19.0 || ^14.15.0 || ^16.13.0 || ^18.0.0"
  }
}
